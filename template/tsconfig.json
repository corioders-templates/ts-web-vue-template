{
  "compilerOptions": {
		"incremental": true,

		"target": "ESNext",
		"types": [],
    "lib": [
			"ESNext",
    ],

		"moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
    },

    "outDir": "out",
		"sourceMap": true,
    "declaration": true,

		"strict": true,
		"allowJs": false,
    "checkJs": false,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
  },
  "include": [
    "./src/**/*.ts",
  ],
}
