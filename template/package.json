{
	"name": "typescript-node-library-template",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"clean": "rm -rf out",
		"watch": "yarn run watch:dev",
		"debug": "yarn run debug:dev",
		"build": "yarn run build:prod",
		"release": "yarn run build && yarn publish --access public --non-interactive",
		"watch:dev": "cross-env WATCH=true NODE_ENV=development webpack serve --no-stats --config ./config/webpack.dev.js",
		"watch:prod": "cross-env WATCH=true NODE_ENV=production webpack serve --no-stats --config ./config/webpack.prod.js",
		"debug:dev": "cross-env DEBUG=true yarn run watch:dev",
		"debug:prod": "cross-env DEBUG=true yarn run watch:prod",
		"analyze:dev": "cross-env ANALYZE=true yarn run build:dev",
		"analyze:prod": "cross-env ANALYZE=true yarn run build:prod",
		"build:dev": "cross-env NODE_ENV=development webpack --config ./config/webpack.dev.js",
		"build:prod": "cross-env NODE_ENV=production webpack --config ./config/webpack.prod.js"
	},
	"devDependencies": {
		"@babel/core": "7.17.2",
		"@babel/plugin-transform-runtime": "7.17.0",
		"@babel/plugin-transform-typescript": "7.16.8",
		"@babel/preset-env": "7.16.11",
		"@soda/friendly-errors-webpack-plugin": "1.8.1",
		"@trivago/prettier-plugin-sort-imports": "3.2.0",
		"@types/webpack-env": "1.16.3",
		"@typescript-eslint/eslint-plugin": "5.11.0",
		"@typescript-eslint/parser": "5.11.0",
		"babel-loader": "8.2.3",
		"browser-sync": "2.27.7",
		"browser-sync-webpack-plugin": "2.3.0",
		"cross-env": "7.0.3",
		"css-loader": "6.6.0",
		"dotenv": "16.0.0",
		"eslint": "8.8.0",
		"eslint-webpack-plugin": "3.1.1",
		"fork-ts-checker-webpack-plugin": "7.2.0",
		"html-webpack-plugin": "5.5.0",
		"ip": "1.1.5",
		"mini-css-extract-plugin": "2.5.3",
		"node-sass-glob-importer": "5.3.2",
		"postcss": "8.4.6",
		"postcss-loader": "6.2.1",
		"postcss-preset-env": "7.3.1",
		"postcss-scss": "4.0.3",
		"prettier": "2.5.1",
		"sass": "1.49.7",
		"sass-loader": "12.4.0",
		"stylelint": "14.5.0",
		"stylelint-config-standard-scss": "3.0.0",
		"terser-webpack-plugin": "5.3.1",
		"typescript": "4.5.5",
		"webpack": "5.68.0",
		"webpack-bundle-analyzer": "4.5.0",
		"webpack-cli": "4.9.2",
		"webpack-dev-server": "4.7.4",
		"webpackbar": "5.0.2"
	},
	"dependencies": {
		"@babel/runtime": "7.17.2",
		"core-js": "3.21.0"
	}
}
